<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="41dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="22dp">

        <ge.unicard.pos.ui.widgets.CTextView
            style="@style/CloseDialog.Title"
            android:id="@+id/alert_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />


        <ge.unicard.pos.ui.widgets.CTextView
            android:id="@+id/alert_dialog_text"
            style="@style/CloseDialog.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:text="" />

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:inputType="phone"
            android:maxLength="12"
            android:digits="1234567890-"
            android:hint="Phone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ge.unicard.pos.ui.widgets.CButton
            android:id="@+id/dialog_yes_btn_check_phone"
            style="@style/CloseDialog.Button.Yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_yes" />

        <ge.unicard.pos.ui.widgets.CButton
            android:id="@+id/dialog_no_btn_check_phone"
            style="@style/CloseDialog.Button.No"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dialog_no" />

    </LinearLayout>

</LinearLayout>