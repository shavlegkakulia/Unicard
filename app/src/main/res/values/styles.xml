<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Widget" />

    <style name="AppTheme.Widget.Button" parent="SingleLine">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/bpg_dejavu_sans_caps</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="AppTheme.Widget.Button.Black">
        <item name="android:textColor">@color/_000000</item>
    </style>

    <style name="AppTheme.Widget.Button.Black.15">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/_000000</item>
    </style>

    <style name="AppTheme.Widget.Button.White">
        <item name="android:textColor">@color/_FFFFFF</item>
    </style>

    <style name="AppTheme.Widget.Button.White.19">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="AppTheme.Widget.Button.White.15">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.Widget.Button.White.17">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.Widget.Button.White.20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Widget.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.Widget.ImageButton.NoPadding">
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.Widget.TextView">
        <item name="android:fontFamily">@font/bpg_dejavu_sans_caps</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.9">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.11">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.13">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.15">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.19">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="AppTheme.Widget.TextView.20.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SingleLine">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Container">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="PageTheme">
        <item name="pageColor">@color/_497FA1</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="PageTheme.Green">
        <item name="pageColor">@null</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="PageTheme.Blue">
        <item name="pageColor">@null</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="PageTheme.DarkGreen">
        <item name="pageColor">@color/_00AB8A</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="PageTheme.Orange">
        <item name="pageColor">@color/_FEC32B</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="ActionList" />

    <style name="ActionList.Theme" parent="PageTheme">
        <item name="pageColor">@color/_497FA1</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="ActionButton" parent="AppTheme.Widget.Button.White.19">
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">32dp</item>
    </style>

    <style name="Launcher" />

    <style name="Launcher.Theme" parent="PageTheme">
        <item name="pageColor">@color/green</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="Launcher.ActionButton" parent="ActionButton">
        <item name="android:textSize">17sp</item>
        <item name="android:background">?pageColor</item>
        <item name="paddingStart">50dp</item>
    </style>

    <style name="Paying" />

    <style name="Theme2">
        <item name="pageColor">@color/_388784</item>
    </style>

    <style name="BonusAccumulationOrMakePayment" />

    <style name="BonusAccumulationOrMakePayment.BonusAccumulationTheme">
        <item name="pageColor">@color/green</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="BonusAccumulationOrMakePayment.MakePaymentTheme">
        <item name="pageColor">@color/yellow</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="BonusAccumulationOrMakePayment.Purchase">
        <item name="pageColor">@color/_497FA1</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="BonusAccumulationOrMakePayment.Balance">
        <item name="pageColor">@color/_7A46B5</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="BonusAccumulationOrMakePayment.ScanButton" parent="AppTheme.Widget.Button.White.17">
        <item name="android:minHeight">100dp</item>
        <item name="android:background">@drawable/scan_btn_corner_top_right</item>
        <item name="android:padding">10dp</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:lineSpacingExtra">7dp</item>
    </style>

    <style name="BonusAccumulationOrMakePayment.InputLayoutHint" parent="@android:style/TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/_333333</item>
        <item name="android:fontFamily">@font/bpg_dejavu_sans_caps</item>
    </style>

    <style name="BonusAccumulationOrMakePayment.InputLayout">
        <item name="android:background">@drawable/input_corner_top_right</item>
        <item name="android:padding">2dp</item>
        <item name="hintTextAppearance">@style/BonusAccumulationOrMakePayment.InputLayoutHint</item>
    </style>

    <style name="BonusAccumulationOrMakePayment.Input">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@null</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/_333333</item>
        <item name="android:textColorHint">@color/_969696</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="BonusAccumulationOrMakePayment.Input.Card">
        <item name="android:inputType">number</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="BonusAccumulationOrMakePayment.Input.Amount">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="BonusAccumulationOrMakePayment.SubmitButton" parent="AppTheme.Widget.Button.White.19">
        <item name="android:background">?pageColor</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="BonusAccumulationOrMakePayment.Status" parent="AppTheme.Widget.TextView.15">
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
        <item name="android:textColor">@color/_333333</item>
    </style>

    <style name="SmsVerification" />

    <style name="SmsVerification.Theme" parent="PageTheme">
        <item name="pageColor">@color/green</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="SmsVerification.InputBox">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minWidth">63dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/_000000</item>
        <item name="android:inputType">number</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:longClickable">false</item>
        <item name="android:background">@drawable/input_box</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="SmsVerification.VerifyButton" parent="AppTheme.Widget.Button.White.19">
        <item name="android:background">?pageColor</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SmsVerification.Resend" parent="AppTheme.Widget.Button.White.15">
        <item name="android:textColor">@color/resend_code_selector</item>
    </style>

    <style name="SmsVerification.Timer" parent="AppTheme.Widget.Button">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Transactions" />

    <style name="Transactions.Theme" parent="PageTheme">
        <item name="pageColor">@null</item>
        <item name="toolbarColor">@color/grey</item>
    </style>

    <style name="Transactions.Search" />

    <style name="Transactions.Search.Input">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/_707070</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">textFilter</item>
        <item name="android:background">@drawable/search_rounded_box</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

    <style name="Transactions.Search.Button">
        <item name="android:padding">7dp</item>
        <item name="android:background">@null</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="Transactions.Item" />

    <style name="Transactions.Item.Id">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/_7FADC5</item>
    </style>

    <style name="Transactions.Item.Amount">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/_7FADC5</item>
    </style>

    <style name="Transactions.Item.Description">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/_939393</item>
    </style>

    <style name="Transactions.Item.Date">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/_485A68</item>
    </style>

    <style name="Transactions.Header" />

    <style name="Transactions.Header.Container">
        <item name="android:background">@color/green</item>
    </style>

    <style name="Transactions.Header.Date">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/_485A68</item>
    </style>

    <style name="Transactions.Header.Status">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/_485A68</item>
    </style>

    <style name="Dialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="DialogButton">
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/_FFFFFF</item>
    </style>

    <style name="DialogTitle" parent="AppTheme.Widget.TextView.13">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/bpg_dejavu_sans_caps</item>
        <item name="android:textColor">@color/_000000</item>
    </style>

    <style name="DialogDescription" parent="AppTheme.Widget.TextView.11">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/_9393930</item>
    </style>

    <style name="CloseDialog" />

    <style name="CloseDialog.Title" parent="DialogTitle"></style>

    <style name="CloseDialog.Description" parent="DialogDescription"></style>

    <style name="CloseDialog.Button" parent="DialogButton"></style>

    <style name="CloseDialog.Button.Yes">
        <item name="android:background">@color/green</item>
    </style>

    <style name="CloseDialog.Button.No">
        <item name="android:background">@color/red</item>
    </style>

    <style name="MessageDialog" />

    <style name="MessageDialog.Information">
        <item name="pageColor">@color/green</item>
    </style>

    <style name="MessageDialog.Error">
        <item name="pageColor">@color/red</item>
    </style>

    <style name="MessageDialog.Title" parent="DialogTitle"></style>

    <style name="MessageDialog.Description" parent="DialogDescription"></style>

    <style name="MessageDialog.Button" parent="DialogButton"></style>

    <style name="MessageDialog.Button.Ok">
        <item name="android:background">?pageColor</item>
    </style>

    <style name="PrintLayout" />

    <style name="PrintLayout.Text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/_000000</item>
    </style>

    <style name="PrintLayout.DashedDivider" parent="PrintLayout.Text">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:text">@string/dummy_dashes</item>
    </style>

    <style name="PrintLayout.Text.SingleLine" parent="SingleLine"></style>


    <color name="_E8BF30">#e8bf30</color>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
